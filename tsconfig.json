{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": false,
    "declaration": false,
    "outDir": "dist",
    "rootDir": "src",
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true
  },
  "include": [
    "src/**/*.ts"
  ]
}